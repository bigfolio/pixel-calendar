<h1>Edit your profile</h1>

<%= error_messages_for :user %>
<% form_for(@user) do |f| -%>

<p><%= label_tag 'name' %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'login' %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email %></p>

<p><%= submit_tag %></p>
<% end -%>
